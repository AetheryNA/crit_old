{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react", "import", "jsx-a11y", "@typescript-eslint"],
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "@typescript-eslint/no-unused-vars": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-unsafe-member-access": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-unsafe-assignment": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-unsafe-call": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-unsafe-return": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-unsafe-argument": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-floating-promises": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-implied-eval": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/no-misused-promises": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/require-await": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/unbound-method": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/restrict-template-expressions": 0, // Delete this rule when migrating files to TS
    "@typescript-eslint/restrict-plus-operands": 0 // Delete this rule when migrating files to TS
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
